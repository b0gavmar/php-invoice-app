<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.invoiceappdesktop.TermekekViewController"
            prefHeight="400.0" prefWidth="600.0">
    <Label fx:id="itemCountLabel" text="Termékek száma: ?"></Label>
    <ListView fx:id="itemListView" layoutX="20" layoutY="20" prefWidth="200" prefHeight="250"/>
    <TextField fx:id="nameField" layoutX="350" layoutY="20" promptText="Termék neve"></TextField>
    <TextField fx:id="priceField" layoutX="350" layoutY="60" promptText="Ár"></TextField>

    <Button text="Hozzáadás" layoutX="350" layoutY="100" onAction="#onAdd"/>
    <Button text="Frissítés" layoutX="450" layoutY="100" onAction="#onUpdate"/>
    <Button text="Törlés" layoutX="550" layoutY="100" onAction="#onDelete"/>
</AnchorPane>
